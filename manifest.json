{
    "manifest_version": 2,
    "name": "site-soundtrack",
    "version": "1.0",
  
    "description": "Adds a red border to all webpages matching mozilla.org.",
  
    "icons": {
      "48": "icons/soundtrack-48.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*"],
        "js": ["borderify.js"]
      }
    ],

    "browser_action": {
      "default_icon": "icons/soundtrack-32.png",
      "default_title": "Site-Soundtrack",
      "default_popup": "popup/control-audio.html"
    },

    "background": {
      "page": "background-page.html",
      "persistent": true
    }
    
    
  }
  